<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="10.0dip"
    android:layout_marginTop="10.0dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgIcon_rank"
        android:layout_width="55.0dip"
        android:layout_height="50.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/pic_c" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gameName_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="13"
            android:singleLine="true"
            android:text="nnnnnnn"
            android:textColor="#ff626262"
            android:textSize="20.0sp" />

        <RatingBar
            android:id="@+id/ratingbar_rank"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15.0dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgdownload_rank"
            android:layout_width="50.0dip"
            android:layout_height="30.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="10.0dip"
            android:src="@drawable/button_download_normal" />

        <TextView
            android:id="@+id/filesize_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sssss"
            android:textColor="#ff4b4b4b" />
    </LinearLayout>

</LinearLayout>