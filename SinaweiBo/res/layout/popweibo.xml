<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popover_background_right"
    android:padding="10dp"
    android:orientation="vertical" >
   	     <TextView android:id="@+id/pop_qrcode"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textColor="#ffffff"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:text="扫一扫"
            android:background="@drawable/pop_background_sel"
            android:padding="10dp"
            android:drawableLeft="@drawable/popover_icon_qrcode"/>
   	     <View android:layout_height="1px"
   	         android:layout_width="fill_parent"
   	         android:background="#ffffff"/>
        <TextView android:id="@+id/pop_refresh"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/pop_background_sel"
            android:drawablePadding="10dp"
             android:padding="10dp"
            android:text="刷新"
            android:drawableLeft="@drawable/popover_icon_refresh"/>
</LinearLayout>
